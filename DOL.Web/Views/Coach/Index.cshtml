@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "教练管理";
}

<div class="am-cf am-padding">
    <div class="am-fl am-cf"><a href="/"><strong class="am-text-primary am-text-lg">首页</strong></a> /<small>教练管理</small></div>
</div>
<div id="searchDomain">

    <div class="am-g">   
        <div class="am-u-lg-6 am-u-end">
            <div class="am-input-group am-input-group-sm">
                <span class="am-input-group-label">名称：</span>
                <input type="text" class="am-form-field" placeholder="按教练名称搜索" style="width:100px;" name="name" ;>
                <span class="am-input-group-label am-margin-left-sm">身份证：</span>
                <input type="text" class="am-form-field" placeholder="按身份证搜索" style="width:100px;" name="no" ;>
                <span class="am-input-group-btn am-margin-left-sm">
                    <button class="am-btn am-btn-default" id="btnSearch" type="button">搜索</button>
                    <button class="am-btn am-btn-default" onclick="ClearFilter()" type="button">清除</button>
                </span>
            </div>
        </div>


    </div>
    <div class="am-g am-margin-top-sm">
        <div class="am-u-lg-6">
            <div class="am-btn-toolbar">
                <div class="am-btn-group am-btn-group-sm">
                    <button onclick="add()" type="button" class="am-btn am-btn-default"><span class="am-icon-plus"></span> 新增</button>
                    <button onclick="batchDelete()" type="button" class="am-btn am-btn-default"><span class="am-icon-trash-o"></span> 删除</button>
                </div>
            </div>
        </div>

    </div>

</div>
<div class="grid_container">
    <table id="dataTable" class="am-table am-table-compact am-table-hover table-main">
        <thead>
            <tr>
                <th dataname="ID" type="checkbox"></th>
                <th dataname="Name">教练名称</th>
                <th dataname="DriverShopName">所属驾校</th>                
                <th dataname="IDCard">身份证</th>
                <th render="Gender">性别</th>
                <th dataname="Mobile">手机</th>
                <th dataname="ProvinceName">户籍省份</th>
                <th dataname="CityName">户籍城市</th>
                <th dataname="BasicSalary">底薪</th>
                <th dataname="ThemeTwoCount">科二通过数</th>
                <th dataname="ThemeThreeCount">科二通过数</th>
                <th dataname="EntryDate" datatype="jsondate">入职日期</th>
                <th dataname="CreatedTime" datatype="jsondate">创建日期</th>
                <th type="eventlist"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts
{
    <script type="text/javascript"> 

        function ClearFilter() {
            $("#searchDomain input").val("");
        }
        //批量删除
        function batchDelete() {
            $.Nuoya.confirm("确认删除？", function () {
                grid.del({
                    ajaxUrl: "/Coach/Delete",
                    callback: function (json) {
                        grid.reload();
                    }
                });
            });
        }

        function formInit(dataitem) {
            if (dataitem!=null)
                $('[name=\'Sex\']').val(dataitem.GenderCode == 1 ? "男" : "女")
            $.Nuoya.action("/Area/GetAreaCodeSelectItem", {}, function (json) {
                $(json).each(function () {
                    if (dataitem != null) {
                        if (dataitem.ProvinceCode == this.Value)
                            $("#form select[name='ProvinceCode']").append("<option value='" + this.Value + "' selected='selected'>" + this.Text + "</option>");
                        else
                            $("#form select[name='ProvinceCode']").append("<option value='" + this.Value + "'>" + this.Text + "</option>");
                    }
                    else
                        $("#form select[name='ProvinceCode']").append("<option value='" + this.Value + "'>" + this.Text + "</option>");
                });
            });

            if (dataitem != null) {
                if (dataitem.ProvinceCode != null) {
                    $.Nuoya.action("/Area/GetAreaCodeSelectItem", { value: dataitem.ProvinceCode }, function (json) {
                        $(json).each(function () {
                            if (dataitem.CityCode == this.Value)
                                $("#form select[name='CityCode']").append("<option value='" + this.Value + "' selected='selected'>" + this.Text + "</option>");
                            else
                                $("#form select[name='CityCode']").append("<option value='" + this.Value + "'>" + this.Text + "</option>");
                        });
                    });
                }
            }


            $.Nuoya.action("/DriverShop/SelectItem", { id: dataitem ? dataitem.DriverShopID : "" }, function (json) {
                $(json).each(function () {
                    $("#form select[name='DriverShopID']").append("<option " + (this.Selected == true ? "selected" : "") + " value='" + this.Value + "'>" + this.Text + "</option>");
                });
            }); 

            //添加表单验证
            $.Nuoya.form("form").validate({
                rules: {
                    Name: {
                        required: true,
                        maxlength: 64
                    },
                    IDCard: {
                        required: true,
                        maxlength: 32
                    },
                    ProvinceCode: {
                        required: true
                    },
                    CityCode: {
                        required: true
                    },
                    GenderCode: {
                        required: true
                    },
                    Mobile: {
                        required: true,
                        maxlength: 11
                    },
                    ArchivesNO: {
                        maxlength: 128
                    },
                    BasicSalary: {
                        required: true,
                        digits: true,
                        min: 0
                    },
                },
                messages: {
                    Name: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    IDCard: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    ProvinceCode: {
                        required: "不允许为空"
                    },
                    CityCode: {
                        required: "不允许为空"
                    },
                    GenderCode: {
                        required: "不允许为空"
                    },
                    Mobile: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    Name: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    Mobile: {
                        required: "不允许为空",
                        maxlength: "最多{0}个字符"
                    },
                    ArchivesNO: {
                        maxlength: "最多{0}个字符"
                    },
                    BasicSalary: {
                        required: "不允许为空",
                        digits: "请输入数字",
                        min: "必须大于{0}"
                    },
                }
            });
        }

        //新增
        function add() {
            $.Nuoya.ajaxDialog({
                closeViaDimmer: false,
                ajaxUrl: "/HtmlTemplates/Coach/Update.html",
                title: "添加教练",
                width: "1300px",
                height: "740px",
                callback: function (e) {
                    formInit();//表单初始化
                },
                buttons: [{
                    label: "保存",
                    callback: function (e) {
                        $.Nuoya.form("form").ajaxSubmit({
                            ajaxUrl: "/Coach/Add",
                            callback: function (data) {
                                if (!data.ErrorDesc) {
                                    e.hide();
                                    grid.reload();
                                }
                                else
                                    $.Nuoya.alert(data.ErrorDesc);
                            }
                        });
                    }
                }]
            })
        }

        var grid = $.Nuoya.grid({
            tableId: "dataTable",
            //表格id
            search: {
                domainId: "searchDomain",
                subId: "btnSearch"
            },
            ajaxUrl: "/Coach/GetPageList",
            //数据请求地址
            pageSize: 10,
            events: [
                {
                    className: "am-text-secondary",
                    icon: "icon-pencil-square-o",
                    name: "编辑",
                    click: function (item) {
                        $.Nuoya.ajaxDialog({
                            closeViaDimmer: false,
                            ajaxUrl: "/HtmlTemplates/Coach/Update.html",
                            title: "编辑教练",
                            width: "1300px",
                            height: "740px",
                            callback: function (e) {
                                $.Nuoya.action("/Coach/Find", { id: item.ID }, function (model) {
                                    //载入数据
                                    $.Nuoya.form("form").dataLoad({
                                        data: model
                                    });
                                    formInit(model);//表单初始化
                                });
                            },
                            buttons: [{
                                label: "保存",
                                callback: function (e) {

                                    $.Nuoya.form("form").ajaxSubmit({
                                        ajaxUrl: "/Coach/Update",
                                        params: {
                                            ID: item.ID
                                        },
                                        callback: function (data) {
                                            if (!data.ErrorDesc) {
                                                e.hide();
                                                grid.reload();
                                            }
                                            else
                                                $.Nuoya.alert(data.ErrorDesc);
                                        }
                                    });
                                }
                            }]
                        })
                    }
                },
                {
                    className: "am-text-danger",
                    icon: "icon-trash-o",
                    name: "删除",
                    click: function (item) {
                        $.Nuoya.confirm("确认删除？", function () {
                            $.Nuoya.deleteAction("/Coach/Delete", {
                                ids: item.ID
                            },
                            function () {
                                grid.reload();
                            });
                        });
                    }
                }
            ]
        });

    </script>
}
